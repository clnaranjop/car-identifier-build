<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Modern Dark Theme -->
    <style name="Theme.HotWheelsIdentifier" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryVariant">@color/primary_orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_cyan</item>
        <item name="colorSecondaryVariant">@color/accent_cyan_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary_blue</item>
        <item name="android:navigationBarColor">@color/secondary_blue</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Material Design 3 -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <!-- Enhanced Splash Screen Theme -->
    <style name="Theme.HotWheelsIdentifier.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/secondary_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.HotWheelsIdentifier</item>
        <item name="android:windowBackground">@drawable/splash_screen_enhanced</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/secondary_blue</item>
    </style>

    <style name="Theme.HotWheelsIdentifier.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/secondary_blue</item>
    </style>

    <style name="Theme.HotWheelsIdentifier.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HotWheelsIdentifier.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Modern Card Style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeColor">@color/overlay_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Modern Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_orange</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_orange</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/primary_orange</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
