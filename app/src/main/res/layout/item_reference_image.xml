<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/background_card"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/overlay_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Reference Image" />

            <!-- Rotation indicator badge -->
            <TextView
                android:id="@+id/tvRotationBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@color/primary_orange"
                android:padding="4dp"
                android:text="90°"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvModelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model Name"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

            <!-- Checkbox para marcar imágenes que necesitan reemplazo -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkboxNeedsReplacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Imagen necesita reemplazo"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                app:buttonTint="@color/primary_orange" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:paddingTop="0dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRotate"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Rotar"
                android:textSize="12sp"
                app:cornerRadius="18dp"
                app:icon="@drawable/icon_camera"
                app:iconSize="16dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCollection"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Agregar"
                android:textSize="12sp"
                app:cornerRadius="18dp"
                app:backgroundTint="@color/primary_orange"
                style="@style/Widget.App.Button" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
