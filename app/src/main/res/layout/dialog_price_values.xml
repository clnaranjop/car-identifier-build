        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRefresh"
