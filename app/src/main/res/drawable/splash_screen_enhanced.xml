<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background gradient más vibrante -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1A237E"
                android:centerColor="#283593"
                android:endColor="#FF6F00"
                android:type="linear" />
        </shape>
    </item>

    <!-- Efecto de brillo sutil -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#10FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Logo centrado (más arriba) -->
    <item
        android:gravity="center"
        android:top="-120dp">
        <bitmap
            android:gravity="center"
            android:src="@drawable/icon_logo" />
    </item>

</layer-list>
