<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/primary_orange_dark"
                android:endColor="@color/primary_orange"
                android:type="linear" />
            <corners android:radius="24dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/primary_orange"
                android:endColor="@color/primary_orange_light"
                android:type="linear" />
            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>
